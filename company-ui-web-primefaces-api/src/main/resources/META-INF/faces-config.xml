<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<!-- Do use PrettyFaces ONLY for navigation -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		
		<navigation-case>
			<from-outcome>productCollectionEditView</from-outcome>
			<to-view-id>/private/productcollection/crudone.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-outcome>saleEditView</from-outcome>
			<to-view-id>/private/sale/crudone.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>saleListView</from-outcome>
			<to-view-id>/private/sale/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>saleNegativeBalanceListView</from-outcome>
			<to-view-id>/private/sale/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>saleZeroBalanceListView</from-outcome>
			<to-view-id>/private/sale/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>salePositiveBalanceListView</from-outcome>
			<to-view-id>/private/sale/list.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>saleConsultView</from-outcome>
			<to-view-id>/private/sale/consult.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>saleStatisticsPeriodly</from-outcome>
			<to-view-id>/private/sale/statistics/periodly.xhtml</to-view-id>
			<redirect />
		</navigation-case>
				
		<navigation-case>
			<from-outcome>saleStatisticsProductly</from-outcome>
			<to-view-id>/private/sale/statistics/productly.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>saleStatisticsCashierly</from-outcome>
			<to-view-id>/private/sale/statistics/cashierly.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>paymentEditView</from-outcome>
			<to-view-id>/private/payment/crudone.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
	</navigation-rule>

</faces-config>
