<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<!-- Do use PrettyFaces ONLY for navigation -->

	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>
			<from-outcome>newinvoice</from-outcome>
			<to-view-id>/private/invoice/new.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>newpayment</from-outcome>
			<to-view-id>/private/payment/new.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>serviceunitmany</from-outcome>
			<to-view-id>/private/service/unit.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>servicepackagemany</from-outcome>
			<to-view-id>/private/service/package.xhtml</to-view-id>
			<redirect />
		</navigation-case>

	</navigation-rule>

</faces-config>
